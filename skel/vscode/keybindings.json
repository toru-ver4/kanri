// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
{ "key": "ctrl+i",             "command": "editor.action.indentLines",
                               "when": "editorTextFocus" },
{ "key": "ctrl+x 3",           "command": "workbench.action.splitEditor" },
{ "key": "ctrl+c",             "command": "editor.action.clipboardCopyAction" },
{ "key": "ctrl+v",             "command": "editor.action.clipboardPasteAction" },
{ "key": "ctrl+r",             "command": "editor.action.startFindReplaceAction" },
{ "key": "ctrl+shift+v",       "command": "markdown.showPreviewToSide" },
{ "key": "ctrl+shift+w",       "command": "workbench.action.toggleSidebarVisibility" }
]
