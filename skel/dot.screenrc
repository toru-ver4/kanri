startup_message off #スタート時のメッセージを非表示に
defencoding utf-8 # 文字コードはeuc-jp
defscrollback 10000

defbce on # for Vim

#ンドプレフィックスキーをC-]に
escape ^]^]

shell zsh  # シェルを変えたいときはここに書く

# 下の方に書く文字
hardstatus alwayslastline "[%02c] % `%-w%{=b bw}%n %t%{-}%+w"
caption always "%{= Rk} %?%F%{b kr}%? %?%h%:%t (screen #%n)%? %{-}"

# 文字コード変換
bind U encoding utf8
bind E encoding euc
bind J encoding SJIS

