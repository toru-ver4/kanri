startup_message off # 
defencoding utf-8 # 
defscrollback 10000

defbce on # for Vim

#
escape ^]^]

shell zsh  #

# 256 color
term xterm-256color

# 
hardstatus alwayslastline "[%02c] % `%-w%{=b bw}%n %t%{-}%+w"
caption always "%{= Rk} %?%F%{b kr}%? %?%h%:%t (screen #%n)%? %{-}"

# 
bind U encoding utf8
bind E encoding euc
bind J encoding SJIS

screen 0
title T

