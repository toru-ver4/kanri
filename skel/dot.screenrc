startup_message off # 
defencoding utf-8 # 
defscrollback 10000

defbce on # for Vim

#
escape ^]^]

shell zsh  #

# 256 color
termcapinfo xterm* 'Co#256:pa#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
attrcolor b ".I"

# 
hardstatus alwayslastline "[%02c] % `%-w%{=b bw}%n %t%{-}%+w"
caption always "%{= Rk} %?%F%{b kr}%? %?%h%:%t (screen #%n)%? %{-}"

# 
bind U encoding utf8
bind E encoding euc
bind J encoding SJIS

screen 0
title T

